@model WebNhac.ViewModels.HomeViewModel

<div class="panel panel-default">
    <div class="bxh-music">TOP MV</div>
    <div class="panel-body">
        <div class="row">
            @{
                int count = 1;
                @foreach (var item in Model.MV)
                {
                    if(count <= 3)
                    {
                        <a href="/xem-mv/@item.Link-@item.IdMv">
                            <div class="col-md-4">
                                <img src="@item.Thumbnail" alt="@item.Name" width="100%"  />
                                <h4 style="text-align: center;">@item.Name</h4>
                            </div>
                        </a>
                        if(count == 3)
                        {
                            <hr style="border:medium;color:black" />
                        }
                    }
                    else
                    {
                        <a href="/xem-mv/@item.Link-@item.IdMv">
                            <div class="col-md-3">
                                <img src="@item.Thumbnail" alt="@item.Name" width="100%" height="100" />
                                <h4 style="text-align: center;">@item.Name</h4>
                            </div>
                        </a>
                    }
                    count++;
                }
            }
        </div>
    </div>
</div>