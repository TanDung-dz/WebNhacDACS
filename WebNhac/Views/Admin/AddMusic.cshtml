@model WebNhac.Models.Music

@{
    ViewData["Title"] = "Thêm Bài Hát Mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Bài Hát Mới</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="AddMusic" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdMusictype" class="control-label">Thể loại nhạc</label>
                        <select asp-for="IdMusictype" class="form-control" asp-items="ViewBag.Musictype"></select>
                        <span asp-validation-for="IdMusictype" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdSinger" class="control-label">Ca sĩ</label>
                        <select asp-for="IdSinger" class="form-control" asp-items="ViewBag.Singer"></select>
                        <span asp-validation-for="IdSinger" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdAuthor" class="control-label">Tác giả</label>
                        <select asp-for="IdAuthor" class="form-control" asp-items="ViewBag.Author"></select>
                        <span asp-validation-for="IdAuthor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên bài hát</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Thumbnail" class="control-label">Ảnh đại diện</label>
                        <input type="file" asp-for="Thumbnail" class="form-control" />
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Fille" class="control-label">File</label>
                        <input asp-for="Fille" class="form-control" />
                        <span asp-validation-for="Fille" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lyric" class="control-label">Lời bài hát</label>
                        <input asp-for="Lyric" class="form-control" />
                        <span asp-validation-for="Lyric" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order" class="control-label">Thứ tự</label>
                        <input type="text" asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Link" class="control-label">Link</label>
                        <input asp-for="Link" class="form-control" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hide" class="control-label">Hide</label>
                        <select asp-for="Hide" class="form-control">
                            <option value="false">False</option>
                            <option value="true">True</option>
                        </select>
                        <span asp-validation-for="Hide" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Tạo mới" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="QLNhac">Quay lại danh sách bài hát</a>
</div>
